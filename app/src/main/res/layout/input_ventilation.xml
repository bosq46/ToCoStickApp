<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">

        <Button
            android:text="-1日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_date_minus"
            android:layout_weight="0.07" />

        <TextView
            android:text="20XX年X月O日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date"
            android:layout_weight="1"
            android:gravity="center" />

        <Button
            android:text="+1日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_date_plus" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <Button
            android:text="-1%"
            android:layout_height="wrap_content"
            android:id="@+id/btn_vent_one_minus"
            android:layout_width="70dp" />

        <Button
            android:text="-0.1%"
            android:layout_height="wrap_content"
            android:id="@+id/btn_vent_zero_point_one_minus"
            android:layout_weight="15"
            android:layout_width="75dp" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_vent_parcent"
            android:layout_weight="15"
            android:gravity="right|center_vertical" />

        <TextView
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView10"
            android:layout_weight="15"
            android:gravity="right|center_vertical"/>

        <Button
            android:text="+0.1%"
            android:layout_height="wrap_content"
            android:id="@+id/btn_vent_zero_point_one_plus"
            android:layout_weight="15"
            android:layout_width="75dp" />

        <Button
            android:text="+1%"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_vent_one_plus"
            android:layout_weight="15"/>

    </LinearLayout>

</LinearLayout>